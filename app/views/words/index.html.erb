
<%= react_component("WordApp", props: {words: @words}) %>

<%= form_for @word do |f| %>
  <%= f.text_field :name, class: 'form-control' %>
  <%= f.text_field :translation, class: 'form-control' %>

  <%= button_tag(:class => "mdl-button mdl-js-button mdl-button--fab mdl-button--colored") do %>
    <i class="material-icons">add</i>
  <% end %>
<% end %>
